@model DatabaseAccess.StaffTable

@{
    ViewBag.Title = "Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header text-white bg-gradient-primary">
            <h3 class="m-0">Staff Details</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Photo -->
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.Photo))
                    {
                        <img class="img-thumbnail rounded-circle mb-3" src="@Url.Content(Model.Photo)" alt="Staff Photo" style="width: 150px; height: 150px;">
                    }
                    else
                    {
                        <img class="img-thumbnail rounded-circle mb-3" src="default-avatar.png" alt="Default Photo" style="width: 150px; height: 150px;">
                    }
                    <h4>@Model.Name</h4>
                </div>

                <!-- Personal Information -->
                <div class="col-md-8">
                    <h5 class="text-secondary">Personal Information</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Gender:</strong> @Model.Gender</p>
                            <p><strong>Contact No:</strong> @Model.ContactNo</p>
                            <p><strong>Home Phone:</strong> @Model.HomePhone</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Email:</strong> @Model.EmailAddress</p>
                            <p><strong>Address:</strong> @Model.Address</p>
                            <p><strong>Qualification:</strong> @Model.Qualification</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Information -->
            <div class="mt-4">
                <h5 class="text-secondary">Additional Information</h5>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Basic Salary:</strong> @Model.BasicSalary</p>
                        <p><strong>Registration Date:</strong> @Model.RegistrationDate.ToString("dd/MM/yyyy")</p>
                        <p><strong>Designation:</strong> @Model.DesignationTable.Title</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Description:</strong> @Model.Description</p>
                        <p><strong>Is Active:</strong> @Model.IsActive</p>
                        @*<p><strong>Full Name:</strong> @Model.UserTable.FullName</p>*@
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-end mt-4">
                <a href="/StaffTables/Edit?id=@Model.StaffID" class="btn btn-primary me-2">Edit</a>
                <a href="/StaffTables/Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>