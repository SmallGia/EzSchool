@model DatabaseAccess.StaffTable

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header text-white bg-gradient-danger">
            <h3 class="m-0">Xóa Thông Tin Nhân Viên</h3>
        </div>
        <div class="card-body">
            <h3 class="text-danger">Bạn có chắc chắn muốn xóa thông tin này?</h3>
            <div class="row">
                <!-- Ảnh đại diện -->
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.Photo))
                    {
                        <img class="img-thumbnail rounded-circle mb-3" src="@Url.Content(Model.Photo)" alt="Staff Photo" style="width: 150px; height: 150px;">
                    }
                    else
                    {
                        <img class="img-thumbnail rounded-circle mb-3" src="default-avatar.png" alt="Default Photo" style="width: 150px; height: 150px;">
                    }
                    <h4>@Model.Name</h4>
                </div>

                <!-- Thông tin cá nhân -->
                <div class="col-md-8">
                    <h5 class="text-secondary">Thông Tin Cá Nhân</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Giới tính:</strong> @Model.Gender</p>
                            <p><strong>Số điện thoại:</strong> @Model.ContactNo</p>
                            <p><strong>Lương cơ bản:</strong> @Model.BasicSalary VND</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Email:</strong> @Model.EmailAddress</p>
                            <p><strong>Địa chỉ:</strong> @Model.Address</p>
                            <p><strong>Trình độ:</strong> @Model.Qualification</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thông tin công việc -->
            <div class="mt-4">
                <h5 class="text-secondary">Thông Tin Công Việc</h5>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Chức vụ:</strong> @Model.DesignationTable.Title</p>
                        <p><strong>Ngày đăng ký:</strong> @Model.RegistrationDate.ToString("dd/MM/yyyy")</p>
                    </div>
                    @*<div class="col-md-6">
                        <p><strong>Người dùng:</strong> @Model.UserTable.FullName</p>
                    </div>*@
                </div>
            </div>

            <!-- Nút thao tác -->
            <div class="d-flex justify-content-end mt-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" });
                }
            </div>
        </div>
    </div>
</div>
