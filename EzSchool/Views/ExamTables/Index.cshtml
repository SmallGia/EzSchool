@model IEnumerable<DatabaseAccess.ExamTable>

@{
    ViewBag.Title = "Index";
}

@{ 
    int usertypeid = Convert.ToInt32(Convert.ToString(Session["UserTypeID"]));
    if (usertypeid == 1)
    {
    <p>
        @Html.ActionLink("Add Exam Type", "Create", null, new { @class = "btn btn-success" })
    </p>
    }
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Examinations</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered text-center align-middle" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Start Date
                        </th>
                        <th>
                            End Date
                        </th>
                        <th>
                            Description
                        </th>
                        @*<th>
                            User
                        </th>*@
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td  class="align-middle">
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td class=" align-middle" >
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td class=" align-middle">
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td class=" align-middle">
                                @Html.DisplayFor(modelItem => item.Descrption)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.UserTable.FullName)
                            </td>*@
                        <td class="btn btn-group-vertical  align-middle">
                            @{
                                if (usertypeid == 1)
                                {
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ExamID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Details", "Details", new { id = item.ExamID }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ExamID }, new { @class = "btn btn-danger" })
                                }
                                else
                                {
                                    @Html.ActionLink("Details", "Details", new { id = item.ExamID }, new { @class = "btn btn-info" })
                                }

                            }

                        </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>