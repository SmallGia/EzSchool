@model DatabaseAccess.UserTable

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow-lg">
    <div class="card-header bg-gradient-primary text-white">
        <h4 class="card-title">User Details</h4>
    </div>
    <div class="card-body">
        <h3>Are you sure you want to delete this?</h3>
        <table class="table table-bordered table-hover text-center">
            <tbody>
                <tr>
                    <th class="bg-light">Full Name</th>
                    <td>@Html.DisplayFor(model => model.FullName)</td>
                </tr>
                <tr>
                    <th class="bg-light">User Name</th>
                    <td>@Html.DisplayFor(model => model.UserName)</td>
                </tr>
                <tr>
                    <th class="bg-light">Contact No</th>
                    <td>@Html.DisplayFor(model => model.ContactNo)</td>
                </tr>
                <tr>
                    <th class="bg-light">Email</th>
                    <td>@Html.DisplayFor(model => model.EmailAddress)</td>
                </tr>
                <tr>
                    <th class="bg-light">Address</th>
                    <td>@Html.DisplayFor(model => model.Address)</td>
                </tr>
                <tr>
                    <th class="bg-light">Type Name</th>
                    <td>@Html.DisplayFor(model => model.UserTypeTable.TypeName)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer text-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Delete" class="btn btn-danger mx-2" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary mx-2" })
        }
    </div>
</div>

