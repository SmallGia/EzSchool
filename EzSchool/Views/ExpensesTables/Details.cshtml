@model DatabaseAccess.ExpensesTable

@{
    ViewData["Title"] = "Expense Details";
}

<div class="card shadow-lg">
    <div class="card-header bg-gradient-primary text-white">
        <h4 class="card-title">Expense Details</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover text-center">
            <tbody>
                <tr>
                    <th class="bg-light">Expense Date</th>
                    <td>@Html.DisplayFor(model => model.ExpensesDate)</td>
                </tr>
                <tr>
                    <th class="bg-light">Amount</th>
                    <td>@Html.DisplayFor(model => model.Amount)</td>
                </tr>
                <tr>
                    <th class="bg-light">Reason</th>
                    <td>@Html.DisplayFor(model => model.Reason)</td>
                </tr>
                <tr>
                    <th class="bg-light">Expense Type</th>
                    <td>@Html.DisplayFor(model => model.ExpenseTypeTable.Name)</td>
                </tr>
                <tr>
                    <th class="bg-light">User</th>
                    <td>@Html.DisplayFor(model => model.UserTable.FullName)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer text-center">
        @Html.ActionLink("Edit", "Edit", new { id = Model.ExpensesID }, new { @class = "btn btn-primary mx-2" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary mx-2" })
    </div>
</div>
