@model DatabaseAccess.EventTable

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow-lg">
    <div class="card-header bg-gradient-primary text-white">
        <h4 class="card-title">Event Details</h4>
    </div>
    <div class="card-body">
        <h3>Are you sure you want to delete this?</h3>
        <table class="table table-bordered table-hover text-center">
            <tbody>
                <tr>
                    <th class="bg-light">Event Title</th>
                    <td>@Html.DisplayFor(model => model.EventTitle)</td>
                </tr>
                <tr>
                    <th class="bg-light">Event Date</th>
                    <td>@Html.DisplayFor(model => model.EventDate)</td>
                </tr>
                <tr>
                    <th class="bg-light">Location</th>
                    <td>@Html.DisplayFor(model => model.Location)</td>
                </tr>
                <tr>
                    <th class="bg-light">Description</th>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <th class="bg-light">User</th>
                    <td>@Html.DisplayFor(model => model.UserTable.FullName)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer text-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Delete" class="btn btn-danger mx-2" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary mx-2" })
        }
    </div>
</div>
