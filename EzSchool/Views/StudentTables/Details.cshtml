@model DatabaseAccess.StudentTable

@{
    ViewBag.Title = "Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header text-white bg-gradient-primary">
            <h3 class="m-0">Thông Tin Sinh Viên</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Ảnh đại diện -->
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.Photo))
                    {
                        <img class="img-thumbnail rounded-circle mb-3" src="@Url.Content(Model.Photo)" alt="Student Photo" style="width: 150px; height: 150px;">
                    }
                    else
                    {
                        <img class="img-thumbnail rounded-circle mb-3" src="default-avatar.png" alt="Default Photo" style="width: 150px; height: 150px;">
                    }
                    <h4>@Model.Name</h4>
                </div>

                <!-- Thông tin cá nhân -->
                <div class="col-md-8">
                    <h5 class="text-secondary">Thông Tin Cá Nhân</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Giới tính:</strong> @Model.Gender</p>
                            <p><strong>Ngày sinh:</strong> @Model.DateofBirth.ToString("dd/MM/yyyy")</p>
                            <p><strong>Số điện thoại:</strong> @Model.ContactNo</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Email:</strong> @Model.EmailAddress</p>
                            <p><strong>Quốc tịch:</strong> @Model.Nationality</p>
                            <p><strong>Địa chỉ:</strong> @Model.Address</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thông tin lớp học -->
            <div class="mt-4">
                <h5 class="text-secondary">Thông Tin Lớp Học</h5>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Lớp hiện tại:</strong> @Model.ClassTable.Name</p>
                        <p><strong>Ngày nhập học:</strong> @Model.AddmissionDate.ToString("dd/MM/yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Chuyên ngành:</strong> @Model.ProgrameTable.Name</p>
                        <p><strong>Trường cũ:</strong> @Model.PreviousSchool</p>
                    </div>
                </div>
            </div>

            <!-- Nút thao tác -->
            <div class="d-flex justify-content-end mt-4">
                @Html.ActionLink("Edit", "Edit", new { id = Model.StudentID }, new { @class = "btn btn-primary" }) 
                @Html.ActionLink("Back to List", "Index", null, new {@class="btn btn-info"})
            </div>
        </div>
    </div>
</div>
