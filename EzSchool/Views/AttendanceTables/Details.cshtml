@model DatabaseAccess.AttendanceTable

@{
    ViewBag.Title = "Details";
}

<div class="card shadow-lg">
    <div class="card-header bg-gradient-primary text-white">
        <h4 class="card-title">Attendance Details</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover text-center">
            <tbody>
                <tr>
                    <th class="bg-light">@Html.DisplayNameFor(model => model.SessionID)</th>
                    <td>@ViewBag.SessionName</td>
                </tr>
                <tr>
                    <th class="bg-light">@Html.DisplayNameFor(model => model.AttendDate)</th>
                    <td>@Html.DisplayFor(model => model.AttendDate)</td>
                </tr>
                <tr>
                    <th class="bg-light">@Html.DisplayNameFor(model => model.AttendTime)</th>
                    <td>@Html.DisplayFor(model => model.AttendTime)</td>
                </tr>
                <tr>
                    <th class="bg-light">@Html.DisplayNameFor(model => model.StudentTable.Name)</th>
                    <td>@Html.DisplayFor(model => model.StudentTable.Name)</td>
                </tr>
                <tr>
                    <th class="bg-light">@Html.DisplayNameFor(model => model.ClassTable.Name)</th>
                    <td>@Html.DisplayFor(model => model.ClassTable.Name)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer text-center">
        @Html.ActionLink("Edit", "Edit", new { id = Model.AttendanceID }, new { @class = "btn btn-primary mx-2" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary mx-2" })
    </div>
</div>
