@model DatabaseAccess.ExamMarksTable

@{
    ViewData["Title"] = "Exam Marks Details";
}

<div class="card shadow-lg">
    <div class="card-header bg-gradient-primary text-white">
        <h4 class="card-title">Exam Marks Details</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover text-center">
            <tbody>
                <tr>
                    <th class="bg-light">Total Marks</th>
                    <td>@Html.DisplayFor(model => model.TotalMarks)</td>
                </tr>
                <tr>
                    <th class="bg-light">Obtain Marks</th>
                    <td>@Html.DisplayFor(model => model.ObtainMarks)</td>
                </tr>
                <tr>
                    <th class="bg-light">Class Subject</th>
                    <td>@Html.DisplayFor(model => model.ClassSubjectTable.Name)</td>
                </tr>
                <tr>
                    <th class="bg-light">Exam Title</th>
                    <td>@Html.DisplayFor(model => model.ExamTable.Title)</td>
                </tr>
                <tr>
                    <th class="bg-light">Student Name</th>
                    <td>@Html.DisplayFor(model => model.StudentTable.Name)</td>
                </tr>
                @*<tr>
                    <th class="bg-light">User</th>
                    <td>@Html.DisplayFor(model => model.UserTable.FullName)</td>
                </tr>*@
            </tbody>
        </table>
    </div>
    <div class="card-footer text-center">
        @Html.ActionLink("Edit", "Edit", new { id = Model.MarksID }, new { @class = "btn btn-primary mx-2" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary mx-2" })
    </div>
</div>
