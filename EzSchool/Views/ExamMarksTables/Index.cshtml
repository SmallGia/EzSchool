@model IEnumerable<DatabaseAccess.ExamMarksTable>

@{
    ViewBag.Title = "Marks Sheets";
}

@{ int usertypeid = Convert.ToInt32(Convert.ToString(Session["UserTypeID"]));
    if (usertypeid == 1)
    {
        <p>
            @Html.ActionLink("Add Marks Sheet", "Create", null, new { @class = "btn btn-success" })
        </p>
    }

}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Exam Marks Sheets</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Student ID
                        </th>
                        <th>
                            Exam
                        </th>
                        <th>
                            Student
                        </th>
                        <th>
                            Subject
                        </th>
                        <th>
                            Total Marks
                        </th>
                        <th>
                            Obitan Marks
                        </th>
                        @*<th>
                            User
                        </th>*@

                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExamTable.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassSubjectTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalMarks)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ObtainMarks)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.UserTable.FullName)
                            </td>*@

                        <td class="btn-group">
                            @{
                                if (usertypeid == 1)
                                {
                                    @Html.ActionLink("Edit", "Edit", new { id = item.MarksID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Details", "Details", new { id = item.MarksID }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.MarksID }, new { @class = "btn btn-danger" })
                                }
                                else
                                {
                                    @Html.ActionLink("Details", "Details", new { id = item.MarksID }, new { @class = "btn btn-info" })
                                }

                            }

                        </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>