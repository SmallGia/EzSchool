@model DatabaseAccess.SubjectTable

@{
    ViewData["Title"] = "Details";
}

<div class="card shadow-lg">
    <div class="card-header bg-gradient-primary text-white">
        <h4 class="card-title">Subject Details</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover text-center">
            <tbody>
                <tr>
                    <th class="bg-light">Subject</th>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <th class="bg-light">Reg Date</th>
                    <td>@Html.DisplayFor(model => model.RegDate)</td>
                </tr>
                <tr>
                    <th class="bg-light">Description</th>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <th class="bg-light">Total Marks</th>
                    <td>@Html.DisplayFor(model => model.TotalMarks)</td>
                </tr>
                <tr>
                    <th class="bg-light">User</th>
                    <td>@Html.DisplayFor(model => model.UserTable.FullName)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer text-center">
        @Html.ActionLink("Edit", "Edit", new { id = Model.SubjectID }, new { @class = "btn btn-primary mx-2" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary mx-2" })
    </div>
</div>
