@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Ezschool - Change password</title>

    <!-- Custom fonts for this template-->
    <link href="~/content/AdminTemp/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/content/AdminTemp/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg- col-md-5">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body">
                        <!-- Nested Row within Card Body -->
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Change Password</h1>
                                <img src="~/content/AdminTemp/img/logo-no-back.png" alt="Login Image" class="img-fluid mb-4" />
                            </div>
                            @if (!string.IsNullOrEmpty(ViewBag.message))
                            {
                                <h3 class="alert alert-danger text-center" style="font-family: 'Pacifico', cursive; font-size: 18px; color: red; border: none; ">
                                    @ViewBag.message
                                </h3>
                            }
                            @using (Html.BeginForm("ChangePasswordU", "Home", FormMethod.Post, new { @class = "form-horizontal user", role = "form", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                <form class="user">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="password" class="form-control form-control-user" id="oldpass" name="oldpass" aria-describedby="emailHelp" placeholder="Enter Old Password...">
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-primary rounded-right" type="button" id="toggleOldPassword">
                                                    <i class="fa fa-eye"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="password" class="form-control form-control-user" id="newpass" name="newpass" placeholder="Enter New Password...">
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-primary rounded-right" type="button" id="toggleNewPassword">
                                                    <i class="fa fa-eye"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="password" class="form-control form-control-user" id="confirm" name="confirm" placeholder="Enter New Password Again...">
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-primary rounded-right" type="button" id="toggleConfirmPassword">
                                                    <i class="fa fa-eye"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    <script>
                                        document.getElementById('toggleNewPassword').addEventListener('click', function (e) {
                                            const passwordInput = document.getElementById('newpass');
                                            const icon = this.querySelector('i');
                                            if (passwordInput.type === 'password') {
                                                passwordInput.type = 'text';
                                                icon.classList.remove('fa-eye');
                                                icon.classList.add('fa-eye-slash');
                                            } else {
                                                passwordInput.type = 'password';
                                                icon.classList.remove('fa-eye-slash');
                                                icon.classList.add('fa-eye');
                                            }
                                        });
                                        document.getElementById('toggleOldPassword').addEventListener('click', function (e) {
                                            const passwordInput = document.getElementById('oldpass');
                                            const icon = this.querySelector('i');
                                            if (passwordInput.type === 'password') {
                                                passwordInput.type = 'text';
                                                icon.classList.remove('fa-eye');
                                                icon.classList.add('fa-eye-slash');
                                            } else {
                                                passwordInput.type = 'password';
                                                icon.classList.remove('fa-eye-slash');
                                                icon.classList.add('fa-eye');
                                            }
                                        });

                                        document.getElementById('toggleConfirmPassword').addEventListener('click', function (e) {
                                            const passwordInput = document.getElementById('confirm');
                                            const icon = this.querySelector('i');
                                            if (passwordInput.type === 'password') {
                                                passwordInput.type = 'text';
                                                icon.classList.remove('fa-eye');
                                                icon.classList.add('fa-eye-slash');
                                            } else {
                                                passwordInput.type = 'password';
                                                icon.classList.remove('fa-eye-slash');
                                                icon.classList.add('fa-eye');
                                            }
                                        });
                                    </script>
                                    <input type="submit" value="Change Password" class="btn btn-primary btn-user btn-block btn-animated" style="background: linear-gradient(45deg, #1de9b6, #1dc4e9); border: none; transition: transform 0.2s ease-in-out; color: white; font-family: 'Pacifico', cursive; font-size: 16px;" onmouseover="this.style.transform='scale(1.05)'; this.style.background='linear-gradient(45deg, #1dc4e9, #1de9b6)'" onmouseout="this.style.transform='scale(1)'; this.style.background='linear-gradient(45deg, #1de9b6, #1dc4e9)'" />
                                    <hr>
                                    <input type="button" value="Cancel" class="btn btn-secondary btn-user btn-block btn-animated" style="background: linear-gradient(45deg, #ff6f61, #ff9a8b); border: none; transition: transform 0.2s ease-in-out; color: white; font-family: 'Pacifico', cursive; font-size: 16px;" onmouseover="this.style.transform='scale(1.05)'; this.style.background='linear-gradient(45deg, #ff9a8b, #ff6f61)'" onmouseout="this.style.transform='scale(1)'; this.style.background='linear-gradient(45deg, #ff6f61, #ff9a8b)'" onclick="window.history.back();" />

                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/content/AdminTemp/vendor/jquery/jquery.min.js"></script>
    <script src="~/content/AdminTemp/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/content/AdminTemp/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/content/AdminTemp/js/sb-admin-2.min.js"></script>
</body>

</html>
