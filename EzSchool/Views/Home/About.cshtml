else
{

    <div class="container mt-4">
        <div class="card shadow">
            <div class="card-header text-white bg-primary2">
                <h3 class="m-0">Thông Tin Sinh Viên</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Ảnh đại diện -->
                    <div class="col-md-4 text-center">
                        @if (!string.IsNullOrEmpty(student.Photo))
                        {
                            <img class="img-thumbnail rounded-circle mb-3" src="@Url.Content(student.Photo)" alt="Student Photo" style="width: 150px; height: 150px;">
                        }
                        else
                        {
                            <img class="img-thumbnail rounded-circle mb-3" src="default-avatar.png" alt="Default Photo" style="width: 150px; height: 150px;">
                        }
                        <h4>@student.Name</h4>
                    </div>

                    <!-- Thông tin cá nhân -->
                    <div class="col-md-8">
                        <h5 class="text-secondary">Thông Tin Cá Nhân</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Giới tính:</strong> @student.Gender</p>
                                <p><strong>Ngày sinh:</strong> @student.DateofBirth.ToString("dd/MM/yyyy")</p>
                                <p><strong>Số điện thoại:</strong> @student.ContactNo</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Email:</strong> @student.EmailAddress</p>
                                <p><strong>Quốc tịch:</strong> @student.Nationality</p>
                                <p><strong>Địa chỉ:</strong> @student.Address</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Thông tin lớp học -->
                <div class="mt-4">
                    <h5 class="text-secondary">Thông Tin Lớp Học</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Lớp hiện tại:</strong> @ViewBag.ClassName</p>
                            <p><strong>Ngày nhập học:</strong> @student.AddmissionDate.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Chuyên ngành:</strong> @ViewBag.ProgramName</p>
                            <p><strong>Trường cũ:</strong> @student.PreviousSchool</p>
                        </div>
                    </div>
                </div>

